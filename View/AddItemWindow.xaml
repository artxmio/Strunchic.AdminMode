<Window x:Class="Strunchic.AdminMode.View.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Strunchic.AdminMode.ViewModel"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="500" Width="500"
        
        WindowStartupLocation="CenterScreen"
        
        d:DataContext="{d:DesignInstance vm:AddItemViewModel}">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock 
         Text="Новый товар"
         FontWeight="SemiBold"
         FontFamily="Outfit"
         FontSize="30"
         VerticalAlignment="Center"
         HorizontalAlignment="Center"/>

        <TextBlock 
         FontWeight="SemiBold"
         Text="Наименование:" 
         FontFamily="Outfit"
         FontSize="15"
         Margin="20,8,125,43" Grid.Row="1"/>

        <TextBox
         Text="{Binding NewItem.Title}"
         VerticalAlignment="Center"
         FontSize="15"
         MaxLength="25"
         Grid.Row="1" 
         Margin="20,30,20,10"
        Height="25"/>

        <TextBlock 
         FontWeight="SemiBold"
         Text="Описание:" 
         FontFamily="Outfit"
         FontSize="15"
         Margin="20,8,125,43"
         Grid.Row="2"/>

        <TextBox
         FontSize="15"
            Text="{Binding NewItem.Description}"
         MaxLength="25"
         Margin="20,30,20,10"
         Grid.Row="2"
        Height="25"/>

        <TextBlock 
         Text="Цена:" 
         FontFamily="Outfit"
         FontWeight="SemiBold"
         FontSize="15"
         Margin="20,8,125,43"
         Grid.Row="3"/>

        <TextBox
         Text="{Binding NewItem.Price}"
         VerticalAlignment="Top"
         FontSize="15"
         MaxLength="25"
         Grid.Row="3"              
         Margin="20,34,20,0"
         Height="25"/>

        <TextBlock
            Text="Тип"
            VerticalAlignment="Top"
            FontFamily="Outfit"
            FontWeight="SemiBold"
            FontSize="15"
            Grid.Row="4" Height="18" Margin="20,0,25,0"/>

        <ComboBox Grid.Row="4" 
                  Margin="20,28,20,11" 
                  ItemsSource="{Binding Types}"
                  SelectedItem="{Binding SelectedType}"
                  DisplayMemberPath="Title"
                  FontSize="15"/>

        <Button Content="Выбрать изображение" Grid.Row="5" 
                HorizontalAlignment="Center" 
                Click="SelectImage_Click" Margin="0,18,0,16" Width="440">
            <Button.ToolTip>
                Выберите изображение из вашего устройства
                Размер вашего изображения должен быть 300x300 пикселей
                Формат изображения .png или .jpg
            </Button.ToolTip>
        </Button>

        <Button Command="{Binding AddItemCommand}" 
            Content="OK" Grid.Row="6" Margin="20,4,265,36"/>
        <Button Content="Cancel" Grid.Row="6"
            Click="Button_Click" Margin="245,4,20,36"/>
    </Grid>
</Window>
