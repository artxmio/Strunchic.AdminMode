<Window x:Class="Strunchic.AdminMode.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Strunchic.AdminMode.ViewModel"
        mc:Ignorable="d"
        Title="Strunchic Admin Mode" 
        
        WindowState="Maximized"
        
        MinHeight="450"
        MinWidth="800"
        
        d:Width="800"
        d:Height="450"
        
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Grid>

        <TabControl>
            <TabItem Header="Пользователи" Width="100">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid 
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2"  
                        SelectedItem="{Binding SelectedUser}"
                        ItemsSource="{Binding Users, UpdateSourceTrigger=PropertyChanged}"
                        Margin="10"
                        AutoGenerateColumns="False"
    
                        CanUserAddRows="False"
                        CanUserResizeColumns="False"
                        HorizontalScrollBarVisibility="Hidden"
    
                        HorizontalContentAlignment="Center">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding UserId}" Header="ID" Width="30"/>
                            <DataGridTemplateColumn Header="Имя" Width="0.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" MaxLength="25" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Почта" Width="0.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Email}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" MaxLength="200" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding Password}" Header="Пароль" Width="0.2*"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <GroupBox 
                        Grid.Column="3"
                        Header="Buttons"
                        Margin="0,10,10,10"
                        MinWidth="100"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2">

                        <Grid>

                            <StackPanel>
                                <Button VerticalAlignment="Bottom" 
                                        Content="Добавить пользователя"
                                        Grid.Row="3"
                                        Margin="0 0 0 10"
                                        Height="30"
                                        Command="{Binding AddUserCommand}"/>
                                
                                <Button VerticalAlignment="Bottom" 
                                        Content="Удалить пользователя"
                                        Grid.Row="3"
                                        Height="30"
                                        Margin="0 0 0 10"
                                        Command="{Binding DeleteUserCommand}"/>

                                <Button VerticalAlignment="Bottom" 
                                        Content="Сохранить изменения"
                                        Grid.Row="3"
                                        Height="30"
                                        Command="{Binding DeleteUserCommand}"/>
                            </StackPanel>

                            <Button x:Name="ExitButton"
                                    VerticalAlignment="Bottom" 
                                    Grid.Row="3" 
                                    Content="Exit"
                                    Height="30"
                                    Click="ExitButton_Click"/>
                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Товары" Width="100">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid 
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"  
                  SelectedItem="{Binding ProjectService.Selected}"
                  ItemsSource="{Binding ProjectService.Data, UpdateSourceTrigger=PropertyChanged}"
                  Margin="10"
                  AutoGenerateColumns="False"
    
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  HorizontalScrollBarVisibility="Hidden"
    
                  HorizontalContentAlignment="Center"
                  >

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Title" Width="0.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="25" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Description" Width="0.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" MaxLength="200" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding CountParticipants}" Header="Count Participants" Width="0.2*"/>
                            <DataGridCheckBoxColumn Binding="{Binding IsComplete}" Header="Complete" Width="0.1*"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <GroupBox 
                  Grid.Column="3"
                  Header="Buttons"
                  Margin="0,10,10,10"
                  MinWidth="100"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">

                        <Grid>

                            <StackPanel>


                            </StackPanel>

                            <Button VerticalAlignment="Bottom" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Grid.Row="3" Content="Exit"/>

                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Тип товара" Width="100">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid 
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"  
                  SelectedItem="{Binding ProjectService.Selected}"
                  ItemsSource="{Binding ProjectService.Data, UpdateSourceTrigger=PropertyChanged}"
                  Margin="10"
                  AutoGenerateColumns="False"
    
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  HorizontalScrollBarVisibility="Hidden"
    
                  HorizontalContentAlignment="Center"
                  >

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Title" Width="0.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="25" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Description" Width="0.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" MaxLength="200" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding CountParticipants}" Header="Count Participants" Width="0.2*"/>
                            <DataGridCheckBoxColumn Binding="{Binding IsComplete}" Header="Complete" Width="0.1*"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <GroupBox 
                  Grid.Column="3"
                  Header="Buttons"
                  Margin="0,10,10,10"
                  MinWidth="100"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">

                        <Grid>

                            <StackPanel>


                            </StackPanel>

                            <Button VerticalAlignment="Bottom" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Grid.Row="3" Content="Exit"/>

                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Заказы" Width="100">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid 
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"  
                  SelectedItem="{Binding ProjectService.Selected}"
                  ItemsSource="{Binding ProjectService.Data, UpdateSourceTrigger=PropertyChanged}"
                  Margin="10"
                  AutoGenerateColumns="False"
    
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  HorizontalScrollBarVisibility="Hidden"
    
                  HorizontalContentAlignment="Center"
                  >

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Title" Width="0.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="25" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Description" Width="0.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" MaxLength="200" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding CountParticipants}" Header="Count Participants" Width="0.2*"/>
                            <DataGridCheckBoxColumn Binding="{Binding IsComplete}" Header="Complete" Width="0.1*"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <GroupBox 
                  Grid.Column="3"
                  Header="Buttons"
                  Margin="0,10,10,10"
                  MinWidth="100"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">

                        <Grid>

                            <StackPanel>


                            </StackPanel>

                            <Button VerticalAlignment="Bottom" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Grid.Row="3" Content="Exit"/>

                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>